---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>Welcome to the Middle Baptist Convention!</h1>
			<p>
				We are quite eager and never before so joyful as we are on the very fine 
spring day as to make the introduction between you all and what we affectionately call " The Middle Way ".
			</p>
		</main>
		<Footer />
	</body>
</html>
